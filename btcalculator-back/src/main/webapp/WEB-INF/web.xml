<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>GetApplicationDataServlet</servlet-name>
    <servlet-class>com.rz.btcalculator.servlets.GetApplicationDataServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetApplicationDataServlet</servlet-name>
    <url-pattern>/getApplicationData</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetReceiptTypesServlet</servlet-name>
    <servlet-class>com.rz.btcalculator.servlets.GetReceiptTypesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetReceiptTypesServlet</servlet-name>
    <url-pattern>/getReceiptTypes</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReimbursementHandlerServlet</servlet-name>
    <servlet-class>com.rz.btcalculator.servlets.ReimbursementHandlerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReimbursementHandlerServlet</servlet-name>
    <url-pattern>/calculateReimbursement</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SetApplicationDataServlet</servlet-name>
    <servlet-class>com.rz.btcalculator.servlets.SetApplicationDataServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SetApplicationDataServlet</servlet-name>
    <url-pattern>/setApplicationData</url-pattern>
  </servlet-mapping>

</web-app>
